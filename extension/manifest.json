{
    "manifest_version": 2,

    "name": "Autohide Corrigenda Comment for Blognone",
    "version": "1.0.0",
    "description": "Description here",

    "icons": {
        "128": "icon-128.png"
    },

    "browser_action": {
        "default_icon": "icon-128.png"
    },

    "background": {
        "page": "background.html"
    },
    "permissions": ["https://www.blognone.com/*"],

    "web_accessible_resources": ["onclickIcon_contentscript.js"],

    "content_scripts": [
        {
            "matches": [           
            "https://www.blognone.com/node/*"
            ],
            "js": ["jquery-1.9.0.js","corrigendaFilter.js"],
            "run_at": "document_end" // pay attention to this line
        }
    ]

}